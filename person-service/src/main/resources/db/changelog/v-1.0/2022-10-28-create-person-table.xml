<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="create-person-table" author="kostialantsov">
        <createTable tableName="person">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="uuid_d" type="UUID">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="firstname" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="drop-person-table" author="kostialantsov">
        <rollback>
            <dropTable tableName="person"/>
        </rollback>
    </changeSet>

</databaseChangeLog>